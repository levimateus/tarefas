<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<filter>
		<display-name>BootstrapFilter</display-name>
		<filter-name>BootstrapFilter</filter-name>
		<filter-class>com.tasks.web.filter.BootstrapFilter</filter-class>
	</filter>
	<filter>
		<display-name>AuthenticationFilter</display-name>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.tasks.web.filter.AuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>BootstrapFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>SignUp</servlet-name>
		<servlet-class>com.tasks.web.servlet.SignUp</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.tasks.web.servlet.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.tasks.web.servlet.Logout</servlet-class>
	</servlet>
	<servlet>
		<display-name>Today</display-name>
		<servlet-name>Today</servlet-name>
		<servlet-class>com.tasks.web.servlet.Today</servlet-class>
	</servlet>
	<servlet>
		<display-name>Tasks</display-name>
		<servlet-name>Tasks</servlet-name>
		<servlet-class>com.tasks.web.servlet.Tasks</servlet-class>
	</servlet>
	<servlet>
		<display-name>EditTask</display-name>
		<servlet-name>CreateTask</servlet-name>
		<servlet-class>com.tasks.web.servlet.CreateTask</servlet-class>
	</servlet>
	<servlet>
		<display-name>DeleteTask</display-name>
		<servlet-name>DeleteTask</servlet-name>
		<servlet-class>com.tasks.web.servlet.DeleteTask</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUp</servlet-name>
		<url-pattern>/sign-up.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Today</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateTask</servlet-name>
		<url-pattern>/create-task.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Today</servlet-name>
		<url-pattern>/today.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Tasks</servlet-name>
		<url-pattern>/tasks.jsp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteTask</servlet-name>
		<url-pattern>/delete-task.jsp</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>faces/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
